from contextlib import nullcontext as does_not_raise

import pytest

from src.ls import ls

ls_desting_dir_path = "E:/Cats/LabaPython/python_lab2/testing_dir/ls_testing"

@pytest.mark.parametrize(
        "start, res, expectation",
        [
            (ls(ls_desting_dir_path, None), ["cat1.txt", "cat2.txt", "cat3.txt"], does_not_raise())
        ]
)
def test_ls(start, res, expectation):
    with expectation:
        assert start == res